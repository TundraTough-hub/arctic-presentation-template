{
  "name": "arctic-presentation-background-exporter",
  "version": "2.0.0",
  "description": "Professional background exporter for Arctic presentation templates",
  "main": "export-all-backgrounds.js",
  "scripts": {
    "start": "node interactive-export.js",
    "interactive": "node interactive-export.js",
    "export": "node export-all-backgrounds.js",
    "export-classic": "node export-all-backgrounds.js --classic-only",
    "export-modern": "node export-all-backgrounds.js --modern-only",
    "export-hd": "node export-all-backgrounds.js --resolution hd",
    "export-4k": "node export-all-backgrounds.js --resolution uhd --quality ultra",
    "export-quick": "node export-all-backgrounds.js --duration 8 --no-stills",
    "export-premium": "node export-all-backgrounds.js --resolution uhd --quality ultra --duration 15",
    "setup": "npm install --legacy-peer-deps && node setup-dependencies.js",
    "install-deps": "npm install --legacy-peer-deps",
    "test": "node export-all-backgrounds.js --help",
    "clean": "rm -rf mp4-backgrounds-* background-previews temp-*"
  },
  "bin": {
    "arctic-export": "./interactive-export.js"
  },
  "keywords": [
    "presentation",
    "backgrounds",
    "arctic",
    "powerpoint",
    "video",
    "export",
    "mp4",
    "animation",
    "corporate",
    "templates"
  ],
  "author": "TundraTough",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^19.0.0",
    "puppeteer-screen-recorder": "^3.0.6",
    "fs-extra": "^11.2.0",
    "archiver": "^7.0.1",
    "sharp": "^0.33.4",
    "ffmpeg-static": "^5.2.0",
    "cli-progress": "^3.12.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "timecut": "^0.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TundraTough-hub/arctic-presentation-template.git"
  },
  "bugs": {
    "url": "https://github.com/TundraTough-hub/arctic-presentation-template/issues"
  },
  "homepage": "https://github.com/TundraTough-hub/arctic-presentation-template#readme",
  "exportOptions": {
    "supportedResolutions": {
      "hd": "1280x720 (HD)",
      "fhd": "1920x1080 (Full HD)",
      "uhd": "3840x2160 (4K UHD)",
      "presentation": "1366x768 (Standard Presentation)"
    },
    "supportedQualities": {
      "low": "Fast export, smaller files",
      "medium": "Balanced quality and size",
      "high": "High quality, recommended",
      "ultra": "Maximum quality, large files"
    },
    "outputFormats": ["mp4", "png"],
    "maxDuration": 30,
    "defaultDuration": 12,
    "backgroundStyles": {
      "classic": "Dynamic flowing animations with organic shapes",
      "modern": "Clean minimal animations with geometric elements"
    }
  }
}
